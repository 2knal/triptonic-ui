{
  "expo": {
    "name": "TripTonic",
    "slug": "triptonic",
    "scheme": "triptonic",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/triptonic-app-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/triptonic-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F5ECE9"
    },
    "assetBundlePatterns": [
      "**/*",
      "assets/*"
    ],
    "ios": {
      "bundleIdentifier": "app.triptonic",
      "supportsTablet": true
    },
    "android": {
      "package": "app.triptonic",
      "adaptiveIcon": {
        "foregroundImage": "./assets/triptonic-logo.png",
        "backgroundColor": "#FFF7F5"
      }
    },
    "web": {
      "favicon": "./assets/triptonic-logo.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/bricolage/bricolage.ttf",
            "./assets/fonts/rethink/rethink.ttf"
          ]
        }
      ],
      [ 
        "expo-build-properties",
        { 
          "android": { 
            "usesCleartextTraffic": true 
          }
        }
      ]
    ]
  }
}
